<%- model_class = Confirmation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th>場所</th>
      <th><%= model_class.human_attribute_name(:locate_desc) %></th>
      <th><%= model_class.human_attribute_name(:safely) %></th>
      <th><%= model_class.human_attribute_name(:safely_desc) %></th>
      <th><%= model_class.human_attribute_name(:contacted) %></th>
      <th><%= model_class.human_attribute_name(:disaster_id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @confirmations.each do |confirmation| %>
      <tr>
        <td><%= link_to confirmation.id, confirmation_path(confirmation) %></td>
        <td><%= confirmation.locate %></td>
        <td><%= confirmation.locate_desc %></td>
        <td><%= confirmation.safely %></td>
        <td><%= confirmation.safely_desc %></td>
        <td><%= confirmation.contacted %></td>
        <td><%= confirmation.disaster_id %></td>
        <td><%= confirmation.user_id %></td>
        <td><%=l confirmation.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_confirmation_path(confirmation), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      confirmation_path(confirmation),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_confirmation_path,
            :class => 'btn btn-primary' %>
