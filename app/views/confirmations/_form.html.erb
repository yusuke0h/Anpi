<%= simple_form_for disaster_confirmations_update_path(@disaster), :html => { :class => 'form-horizontal' }, method: :put do |f| %>
  <%= f.input :locate, collection: ['自宅', '会社', 'その他'], as: :select, include_blank: false  %>
  <%= f.input :locate_desc %>
  <%= f.input :safely, collection: ['無事', '怪我あり'], as: :select, include_blank: false  %>
  <%= f.input :safely_desc %>

  <%= f.button :submit, :class => 'btn-primary', value: '完了' %>
<% end %>
