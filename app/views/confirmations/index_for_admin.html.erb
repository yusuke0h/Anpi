<h1>管理者用安否情報確認</h1>

<%- model_class = Confirmation -%>
<div class="page-header">
  <h1>社員一覧</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>安否情報登録有無</th>
      <th>ユーザ名</th>
      <th>メールアドレス</th>
      <th>電話番号</th>
      <th>場所</th>
      <th>場所-備考</th>
      <th>安否</th>
      <th>安否-備考</th>
      <th>初期登録日時</th>
      <th>最新登録日時</th>
    </tr>
  </thead>
  <tbody>
    <% @confirmations.each do |confirmation| %>
      <tr>
        <td>
          <% if confirmation.contacted %>
            <p class='btn btn-success'>連絡済</p>
          <% else %>
            <p class='btn btn-danger'>未連絡</p>
          <% end %>
        </td>
        <td><%= confirmation.user.name %></td>
        <td><%= confirmation.user.email %></td>
        <td><%= confirmation.user.tel %></td>
        <td><%= confirmation.locate %></td>
        <td><%= confirmation.locate_desc %></td>
        <td><%= confirmation.safely %></td>
        <td><%= confirmation.safely_desc %></td>
        <td><%= confirmation.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><%= confirmation.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "戻る",
            disasters_path,
            :class => 'btn btn-default' %>