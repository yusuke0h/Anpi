<%= simple_form_for @disaster, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>

  <%= f.button :submit, class: 'btn btn-primary btn-raised' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                disasters_path, :class => 'btn btn-default btn-raised' %>
<% end %>